<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyOwnerActivity"
    android:background="@drawable/neet">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearvotp">

        <EditText
            android:id="@+id/ggotp1"
            android:layout_width="33dp"
            android:layout_height="65dp"
            android:textSize="34dp"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"
            android:inputType="number"
            android:textAlignment="center"/>


        <EditText
            android:id="@+id/ggotp2"
            android:layout_width="33dp"
            android:layout_height="65dp"
            android:textSize="34dp"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"
            android:inputType="number"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/ggotp3"
            android:layout_width="33dp"
            android:layout_height="65dp"
            android:textSize="34dp"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"
            android:inputType="number"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/ggotp4"
            android:layout_width="33dp"
            android:layout_height="65dp"
            android:textSize="34dp"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"
            android:inputType="number"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/ggotp5"
            android:layout_width="33dp"
            android:layout_height="65dp"
            android:textSize="34dp"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"
            android:inputType="number"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/ggotp6"
            android:layout_width="33dp"
            android:layout_height="65dp"
            android:textSize="34dp"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"
            android:inputType="number"
            android:textAlignment="center"/>

    </LinearLayout>

    <Button
        android:id="@+id/gconfirm"
        android:layout_width="338dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linearvotp"
        android:background="@drawable/confirm" />

</RelativeLayout>